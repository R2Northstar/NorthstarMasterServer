{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": false,
    "removeComments": true,
    "rootDir": "./src",
    "outDir": "./build",
    "baseUrl": "./src",
    "forceConsistentCasingInFileNames": true,
    "plugins": [{ "transform": "typescript-transform-paths" }],
    "paths": {
      "~accounts/*": ["accounts/*"],
      "~env/*": ["env/*"],
      "~gameservers/*": ["gameservers/*"],
      "~routes/*": ["routes/*"],
      "~constants.js": ["constants.js"],
      "~db.js": ["db.js"],
      "~pjson.js": ["pjson.js"],
      "~utils.js": ["utils.js"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
